<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<div class="container" style="display: flex; margin: 8px;">
<% @jobs.each do |job| %>
<div class="card" style="width: 18rem; margin: 10px;">
  <div class="card-body">
    <h5 class="card-title">
    <%= job.naziv_oglasa %></h5>
    <p class="card-text"><%= job.opis_oglasa %></p>
    <a href="<%= new_job_application_path(job) %>" class="btn btn-primary">Prijava</a>
    <%= link_to 'Edit', edit_job_path(job) %>
    <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
<% end %>
</div>



<%= link_to 'Dodaj Posao', new_job_path %>

